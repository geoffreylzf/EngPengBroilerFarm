<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    tools:context="my.com.engpeng.engpeng.UploadActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_black"
            android:gravity="center"
            android:paddingBottom="24dp"
            android:text="@string/summary_upload"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/upload_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/colorTableHeader"
                android:gravity="center_vertical">
                <TextView
                    style="@style/TableHeaderTextViewStyle"
                    android:text="@string/module" />
                <TextView
                    style="@style/TableHeaderTextViewStyle"
                    android:text="@string/number_of_record" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/colorTableRow"
                android:gravity="center_vertical">

                <TextView
                    android:text="@string/mortality"
                    style="@style/TableRowTextViewStyle"/>

                <TextView
                    android:id="@+id/upload_tv_mortality"
                    style="@style/TableRowTextViewStyle"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical">

                <TextView
                    android:text="@string/catching_bta"
                    style="@style/TableRowTextViewStyle"/>

                <TextView
                    android:id="@+id/upload_tv_catch_bta"
                    style="@style/TableRowTextViewStyle"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/colorTableRow"
                android:gravity="center_vertical">

                <TextView
                    android:text="@string/body_weight"
                    style="@style/TableRowTextViewStyle"/>

                <TextView
                    android:id="@+id/upload_tv_weight"
                    style="@style/TableRowTextViewStyle"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="1.0"
        android:orientation="vertical">
        <CheckBox
            android:id="@+id/upload_cb_local"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/local2"/>
        <Button
            android:id="@+id/upload_btn_upload"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
