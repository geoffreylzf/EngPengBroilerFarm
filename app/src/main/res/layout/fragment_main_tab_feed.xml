<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/main_f_btn_feed_in"
            style="@style/MainFragmentButtonStyle"
            android:drawableTop="@drawable/download_24"
            android:text="BAJA MASUK DARI KILANG (GRN)" />

        <Button
            android:id="@+id/main_f_btn_feed_transfer"
            style="@style/MainFragmentButtonStyle"
            android:drawableTop="@drawable/transfer_24"
            android:text="KDG KE KDG"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="84dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/main_f_btn_feed_discharge"
            style="@style/MainFragmentButtonStyle"
            android:drawableTop="@drawable/upload_24"
            android:text="LADANG KE LADANG - KELUAR" />

        <Button
            android:id="@+id/main_f_btn_feed_receive"
            style="@style/MainFragmentButtonStyle"
            android:drawableTop="@drawable/download_24"
            android:text="LADANG KE LADANG - MASUK" />

    </LinearLayout>

</LinearLayout>