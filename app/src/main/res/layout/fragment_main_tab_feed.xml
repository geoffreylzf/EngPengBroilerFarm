<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/main_f_btn_feed_in"
            style="@style/MainFragmentButtonStyle"
            android:drawableTop="@drawable/download_24"
            android:text="@string/feed_delivery_in" />

        <Button
            android:id="@+id/main_f_btn_feed_transfer"
            style="@style/MainFragmentButtonStyle"
            android:drawableTop="@drawable/transfer_24"
            android:text="@string/feed_hse_to_hse_transfer"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/main_f_btn_feed_t_in"
            style="@style/MainFragmentButtonStyle"
            android:drawableTop="@drawable/download_24"
            android:text="Feed Transfer In" />

    </LinearLayout>

</LinearLayout>