<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/li_temp_feed_receive_detail_feed_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="#FFF"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:background="@drawable/corn" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/li_temp_feed_receive_detail_feed_sku_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textStyle="bold"
            tools:text="sku_code"/>

        <TextView
            android:id="@+id/li_temp_feed_receive_detail_feed_sku_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textStyle="italic"
            tools:text="sku_name"/>

    </LinearLayout>

    <CheckBox
        android:id="@+id/li_temp_feed_receive_detail_feed_cb"
        android:layout_width="40dp"
        android:layout_height="40dp" />

</LinearLayout>